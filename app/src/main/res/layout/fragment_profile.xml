<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- ProgressBar no centro, visível no início -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <!-- Layout principal, começa invisível -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/profileContent">

        <!-- Nome do utilizador -->
        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"/>

        <!-- Biografia do utilizador -->
        <TextView
            android:id="@+id/txtBiografia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="30dp"/>

        <!-- Botão para editar biografia -->
        <Button
            android:id="@+id/btnEditBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Biografia"
            android:layout_marginBottom="20dp"/>

        <!-- EditText para nova biografia -->
        <EditText
            android:id="@+id/edtNewBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nova biografia"
            android:maxLength="100"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:inputType="text"/>

        <!-- RecyclerView para exibir páginas filtradas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPaginas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:scrollbars="vertical"/>

        <!-- Botões na parte inferior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp">

            <Button
                android:id="@+id/btnEliminarConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar Conta"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnSair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sair"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
